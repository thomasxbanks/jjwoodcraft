{% set caption = '' %}
{% if post.thumbnail.alt is not empty %}
	{% set caption = post.thumbnail.alt %}
{% endif %}
{% if post.thumbnail.description is not empty %}
	{% set caption = post.thumbnail.description %}
{% endif %}
{% if post.thumbnail.caption is not empty %}
	{% set caption = post.thumbnail.caption %}
{% endif %}

<figure class="hero_container">
	{% include 'atoms/image.twig' with {
    'image' : post.thumbnail
  } %}
	{% if caption is not same as ( post.post_title ) %}
		<figcaption>{{caption}}</figcaption>
	{% endif %}
</figure>
